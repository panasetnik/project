def rectangle_area(x, y):
    return x * y

def right_triangle_area(x, y):
    p = x * y
    p = p / 2
    return p

area1 = rectangle_area(3, 4)
area2 = right_triangle_area(5, 6)
total_area = area1 + area2

print("Задание 7:", total_area)


# ==========================
# ЗАДАНИЕ 8
# ==========================
def divisible_by_own_digits(n):
    result = []
    i = 1

    while i <= n:
        digits = []
        for ch in str(i):
            if ch != '0':
                digits.append(int(ch))

        if len(digits) == 0:
            i = i + 1
            continue

        ok = True
        for d in digits:
            if i % d != 0:
                ok = False
                break

        if ok:
            result.append(i)

        i = i + 1

    return result

print("Задание 8:", divisible_by_own_digits(50))


# ==========================
# ЗАДАНИЕ 9
# ==========================
def sum_of_digits(n):
    total = 0
    for ch in str(n):
        total = total + int(ch)
    return total

def steps_to_zero(n):
    count = 0
    while n != 0:
        s = sum_of_digits(n)
        n = n - s
        count = count + 1
    return count

print("Задание 9:", steps_to_zero(21))


# ==========================
# ЗАДАНИЕ 10
# ==========================
def count_numbers(N, digits):
    count = 0
    i = 100

    while i <= N:
        ok = True
        for ch in str(i):
            digit = int(ch)
            if digit not in digits:
                ok = False
                break

        if ok:
            count = count + 1

        i = i + 1

    return count

print("Задание 10:", count_numbers(220, {1, 2, 0}))


# ==========================
# ЗАДАНИЕ 11
# ==========================
def is_prime(n):
    if n < 2:
        return False
    i = 2
    while i * i <= n:
        if n % i == 0:
            return False
        i = i + 1
    return True

def is_binary_palindrome(n):
    b = bin(n)[2:]
    left = 0
    right = len(b) - 1

    while left < right:
        if b[left] != b[right]:
            return False
        left = left + 1
        right = right - 1

    return True

def prime_binary_palindromes(n):
    result = []
    i = 2
    while i <= n:
        if is_prime(i) and is_binary_palindrome(i):
            result.append(i)
        i = i + 1
    return result

print("Задание 11:", prime_binary_palindromes(50))


# ==========================
# ЗАДАНИЕ 12
# ==========================
def sum_divisors(n):
    total = 0
    i = 1
    while i < n:
        if n % i == 0:
            total = total + i
        i = i + 1
    return total

def amicable_numbers(N):
    pairs = []
    a = 2

    while a <= N:
        b = sum_divisors(a)
        if b > a and b <= N:
            if sum_divisors(b) == a:
                pairs.append((a, b))
        a = a + 1

    return pairs

print("Задание 12:", amicable_numbers(300))


# ==========================
# ЗАДАНИЕ 13
# ==========================
def armstrong_numbers(k):
    result = []
    i = 1
    while i <= k:
        n = len(str(i))
        total = 0
        for ch in str(i):
            total = total + (int(ch) ** n)
        if total == i:
            result.append(i)
        i = i + 1
    return result

print("Задание 13:", armstrong_numbers(500))


# ==========================
# ЗАДАНИЕ 14
# ==========================
def count_divisors(n):
    count = 0
    i = 1
    while i <= n:
        if n % i == 0:
            count = count + 1
        i = i + 1
    return count

def max_divisors(M, N):
    max_count = 0
    result = []
    i = M

    while i <= N:
        c = count_divisors(i)
        if c > max_count:
            max_count = c
            result = [i]
        elif c == max_count:
            result.append(i)
        i = i + 1

    return result

print("Задание 14:", max_divisors(1, 10))


