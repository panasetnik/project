# ЗАДАНИЕ 15
# ==========================
def is_prime15(n):
    if n < 2:
        return False
    i = 2
    while i * i <= n:
        if n % i == 0:
            return False
        i = i + 1
    return True

def is_binary_pal15(n):
    b = bin(n)[2:]
    left = 0
    right = len(b) - 1
    while left < right:
        if b[left] != b[right]:
            return False
        left = left + 1
        right = right - 1
    return True

def prime_binary_palindromes15(n):
    result = []
    i = 2
    while i <= n:
        if is_prime15(i) and is_binary_pal15(i):
            result.append(i)
        i = i + 1
    return result

print("Задание 15:", prime_binary_palindromes15(50))