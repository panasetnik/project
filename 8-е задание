# ==========================
# ЗАДАНИЕ 1
# ==========================
import math

def area_triangle(a, h):
    s = a * h
    s = s / 2
    return s

def area_rectangle(a, b):
    r = a * b
    return r

def area_circle(r):
    s = r * r
    s = s * math.pi
    return s

def area_square(a):
    r = a * a
    return r


# ==========================
# ЗАДАНИЕ 2
# ==========================
import math

def triangle_area(a):
    part1 = math.sqrt(3)
    part2 = a * a
    result = part1 * part2
    result = result / 4
    return result

def hexagon_area(a):
    one_triangle = triangle_area(a)
    hex_s = one_triangle * 6
    return hex_s

print("Задание 2:", hexagon_area(4))


# ==========================
# ЗАДАНИЕ 3
# ==========================
import math

def hypotenuse(a, b):
    sq1 = a * a
    sq2 = b * b
    summ = sq1 + sq2
    c = math.sqrt(summ)
    return c

a1 = 3
b1 = 4
a2 = 5
b2 = 12

h1 = hypotenuse(a1, b1)
h2 = hypotenuse(a2, b2)

print("Задание 3: гипотенуза 1:", h1)
print("Задание 3: гипотенуза 2:", h2)

if h1 > h2:
    print("Первая гипотенуза больше")
else:
    print("Вторая гипотенуза больше")


# ==========================
# ЗАДАНИЕ 4
# ==========================
def gcd(a, b):
    while b != 0:
        temp = b
        b = a % b
        a = temp
    return a

def simplify_fraction(num, den):
    g = gcd(num, den)
    new_num = num // g
    new_den = den // g
    return new_num, new_den

def divide_fractions(a, b, c, d):
    num = a * d
    den = b * c
    simplified = simplify_fraction(num, den)
    return simplified

print("Задание 4:", divide_fractions(2, 3, 4, 5))


# ==========================
# ЗАДАНИЕ 5
# ==========================
def gcd2(a, b):
    while b != 0:
        t = b
        b = a % b
        a = t
    return a

def simplify_fraction2(num, den):
    g = gcd2(num, den)
    return num // g, den // g

def divide_fractions2(a, b, c, d):
    num = a * d
    den = b * c
    return simplify_fraction2(num, den)

def subtract_fractions(a, b, c, d):
    num1 = a * d
    num2 = b * c
    num = num1 - num2
    den = b * d
    return simplify_fraction2(num, den)

print("Задание 5:", subtract_fractions(3, 4, 1, 6))


# ==========================
# ЗАДАНИЕ 6
# ==========================
def gcd3(a, b):
    while b != 0:
        t = b
        b = a % b
        a = t
    return a

def lcm(a, b):
    ab = a * b
    g = gcd3(a, b)
    result = ab // g
    return result

print("Задание 6: НОД:", gcd3(12, 18))
print("Задание 6: НОК:", lcm(12, 18))


